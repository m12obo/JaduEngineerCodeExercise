        </div>
        <div class="column middle content">
            {{ render(controller(controllerToRender)) }}
        </div>
        <div class="column right rightsidebar rightSidebarLine">
            {{ render(controller(sidebarToRender)) }}
        </div>

    </div>

    
    
{% endblock body %}