{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/stylesheet.css">
{% endblock stylesheets %}

{% block javascripts %}
    <script src="/js/scripts.js"></script>
    <script src="/js/code.jquery.com_jquery-3.7.1.min.js"></script>
{% endblock javascripts %}

{% block title %}
    <title>{{ title }}</title>
{% endblock title %}


{% block body %}

    <div class="topbar" id="JaduExerciseTopBar">
        <a>Jadu Engineer Code Exercise</a>
    </div>
    
    <div class="row">
        <div class="column left" >
            <div class="sidebar sidebarLine">
                <a href="{{ path('home')}}">Home</a>
                <a href="{{ path('isPalindrome')}}">isPalindrome</a>
                <a href="{{ path('isAnagram')}}">isAnagram</a>
                <a href="{{ path('isPangram')}}">isPangram</a>
